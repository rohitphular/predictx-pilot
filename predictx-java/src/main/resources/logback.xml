<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>{%d{yyyy-MM-dd HH:mm:ss.SSS}}{faint} %clr{${LOG_LEVEL_PATTERN}} %clr{${sys:PID}}{magenta}{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}}{cyan}{:}{faint} %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}</pattern>
        </encoder>
    </appender>
    <logger name="org.pilot.predictx" level="DEBUG"/>
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>